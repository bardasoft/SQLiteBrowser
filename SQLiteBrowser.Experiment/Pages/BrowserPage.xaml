<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:vm="clr-namespace:SQLiteBrowser.Experiment.ViewModels"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="True"
    xmlns:converter="clr-namespace:SQLiteBrowser.Experiment.Converters"
    x:Class="SQLiteBrowser.Experiment.Pages.BrowserPage">
    <ContentPage.BindingContext>
        <vm:BrowserViewModel
            x:Name="VM" />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Picker
            ItemsSource="{Binding Mappings}"
            SelectedItem="{Binding SelectedMapping}"
            ItemDisplayBinding="{Binding TableName}">

        </Picker>
        <Label
            Text="{Binding MappingSummary}"
            Grid.Row="1" />
        <ScrollView
            Grid.Row="2"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal">

            <CollectionView
                x:Name="TheCollectionView"
                WidthRequest="{Binding TotalCharacterLength, Converter={StaticResource stringLengthToLabelWidth}, ConverterParameter={StaticResource CharacterWidth}}"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Red"
                ItemsSource="{Binding Rows}"
                Header="{Binding Columns}">
                <CollectionView.HeaderTemplate>
                    <DataTemplate>
                        <StackLayout
                            HeightRequest="50"
                            Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Aquamarine"
                            BindableLayout.ItemsSource="{Binding Columns}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Label
                                        WidthRequest="{Binding MaxLength, Converter={StaticResource stringLengthToLabelWidth}, ConverterParameter={StaticResource CharacterWidth}}"
                                        Text="{Binding Name}" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </DataTemplate>

                </CollectionView.HeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            HeightRequest="50"
                            Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Orange"
                            BindableLayout.ItemsSource="{Binding Properties}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Label
                                        WidthRequest="{Binding ColumnHeader.MaxLength, Converter={StaticResource stringLengthToLabelWidth}, ConverterParameter={StaticResource CharacterWidth}}"
                                        Text="{Binding Text}" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

    </Grid>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:StringLengthToLabelWidth
                x:Key="stringLengthToLabelWidth" />
            <x:Double
                x:Key="CharacterWidth">20</x:Double>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
